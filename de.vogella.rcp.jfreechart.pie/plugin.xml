<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.vogella.rcp.jfreechart.pie.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="de.vogella.rcp.jfreechart.pie.Perspective"
            id="de.vogella.rcp.jfreechart.pie.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.vogella.rcp.jfreechart.pie.ViewPart1"
            id="de.vogella.rcp.jfreechart.pie.view1"
            name="FormView"
            restorable="true">
      </view>
      <view
            class="de.vogella.rcp.jfreechart.pie.View2"
            id="de.vogella.rcp.jfreechart.pie.view2"
            name="View2"
            restorable="true">
      </view>
      <view
            class="de.vogella.rcp.jfreechart.pie.ViewPart2"
            id="de.vogella.rcp.jfreechart.pie.view3"
            name="FormView2"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="de.vogella.rcp.jfreechart.pie.view3">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
